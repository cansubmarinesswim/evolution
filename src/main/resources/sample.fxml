<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<BorderPane fx:controller="com.evo.Controller"
            xmlns:fx="http://javafx.com/fxml"
            >
    <top>
        <Label text="Welcome to the simulation" BorderPane.alignment="CENTER"
        style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed">
            <font>
                <Font name="Calibri bold" size="30"/>
            </font>
        </Label>

    </top>
    <left>
        <GridPane alignment="TOP_LEFT" hgap="10" vgap="10"
                  gridLinesVisible="true"
                  style="-fx-border-color: red; -fx-border-width: 3; -fx-border-style: dashed">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>
            <Button text="Start simulation" GridPane.rowIndex="0" prefWidth="130"/>
            <Button text="B3" GridPane.rowIndex="1" prefWidth="130"/>
            <Button text="B5" GridPane.rowIndex="2" prefWidth="130"/>
        </GridPane>
    </left>

    <center>
        <Pane style="-fx-border-color: red; -fx-border-width: 3; -fx-border-style: dashed" fx:id="mapRegion">
<!--            <TilePane prefWidth="40" prefHeight="40" style="-fx-border-color: green; -fx-border-width: 3; -fx-border-style: dashed">-->

<!--            </TilePane>-->
        </Pane>
    </center>

</BorderPane>